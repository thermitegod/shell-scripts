comp_dir="0"
comp_files="0"
orig_rm="0"
comp_status="0"

compress(){
	if [ -d "${f}" ];then
		#the piping actually makes the archive smaller, at least for xz
		if [ ${comp_status} = "1" ];then
			tar --xattrs -cf - "${f%%}" -P | pv -s $(du -sb "${f%%}" | awk '{print $1}') | "${C}" >| "${f%%}.tar.${E}"
		else
			tar --xattrs -cvf - "${f%%}" -P | "${C}" >| "${f%%}.tar.${E}"
		fi
	elif [ -f "${f}" ];then
		"${C}" "${f%%}"
	fi
	if [ "${comp_rm}" = "1" ];then rm -r "${f%%}";fi
}

mode="${0##*/}"

case "${mode}" in
	mkbz2) C="bzip2";E="bz2";;
	mkgz) C="gzip";E="gz";;
	mkxz) export XZ_OPT="-e9";C="xz";E="xz";;
esac
while getopts "BGXSdfsxzh" OPT;do
	case "$OPT" in
		B) C="bzip2";E="bz2";;
		G) C="gzip";E="gz";;
		X) C="xz";E="xz";;
		d) comp_dir="1";;
		f) comp_files="1";;
		s) orig_rm="1";;
		S) comp_status="1";;
		x) comp_dir="1";orig_rm="1";;
		z) comp_files="1";orig_rm="1";;
		h)
			printf "CURRENT ${C}\n\n"
			printf " default will compress files passed in \$1\n"
			printf " -d\tcompress all directories\n"
			printf " -f\tcompress all files\n"
			printf " -h\tprint this help\n"
			printf " -s\tcompress \$1, delete after compressed\n"
			printf " -S\tenable cool status bar, directories only\n"
			printf " -x\tcompress all files, delete original after compressed\n"
			printf " -z\tcompress all directories, delete original after compressed\n"
			printf "\nMODES\n"
			printf " -B\tuse bzip2\n"
			printf " -G\tuse gzip\n"
			printf " -X\tuse xz\n"
			exit;;
	esac
done
shift $((OPTIND - 1))

if [ -z "${C}" ] || [ -z "${E}" ];then printf "No compresion format set\n";exit 1;fi

if [ -n "${1}" ];then
	while true;do
		f="${1%%}"
		if [ -e "${f}" ];then
			compress
		else
			printf "\nInput is none existent : ${1}\n\n"
		fi
		if [ -n "${2}" ];then shift;else break;fi
	done
elif [ "${comp_dir}" = "1" ] || [ "${comp_files}" = "1" ];then
	for f in *; do
		if [ "${comp_dir}" = "1" ] && [ -d "${f}" ];then
			compress
		fi
		if [ "${comp_files}" = "1" ] && [ -f "${f}" ];then
			compress
		fi
	done
else
	printf "Nothing to compress\n";exit
fi
