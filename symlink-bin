if [ "$(id -u)" -ne 0 ];then printf "Requires root\n";exit;fi

a="/usr/local/bin"
b="/home/brandon/.bin/bin"

while true;do
	case "${1}" in
		-o) unset b;b="/home/brandon/.bin/bin-other";shift;;
		-h)
			printf " -h\tprint this help\n"
			printf " -o\tfiles in /home/brandon/.config/bin-other\n"
			exit;;
		*) break;;
	esac
done

cd "${a}"
for f in *;do
	if ! [ -e "${f}" ] && [ -h "${f}" ];then
		rm "${f}"
	fi
done

cd "${b}"
for f in *;do
	if ! [ -e "${a}/${f}" ];then
		ln -s "${b}/${f}" "${a}/${f}"
	fi
done
