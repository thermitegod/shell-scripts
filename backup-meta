finish() { if [ -d "${tmpdir}" ];then rm --preserve-root -r "${tmpdir}";fi }
trap 'exit 1' INT HUP QUIT TERM USR1
trap finish EXIT
tmpdir=$(mktemp -d)

date=$(date "+%F-%H%M")
user="brandon"
group="${user}"
backup_dir="/mnt/data/backup"
comp="zstd"
V=""

dir_check(){ if ! [ -d "${target_dest}" ];then mkdir -p "${target_dest}";fi }
move_finish(){
	chown "${user}:${group}" "${tmpdir}/${target_zst}"
	mv -iv "${tmpdir}/${target_zst}" "${target_dest}"
}

hlp(){
	printf "\nGENERAL\n"
	printf " -h\tprint this help\n"
	printf " -v\tverbose\n"
	printf " -x\tuse xz\n"
	printf " -z\tuse zstd\n"
	printf "\nCOMPRESS\n"
	printf " -1\tchromium\n"
	printf " -2\tuser-bin\n"
	printf " -3\tuser-config\n"
	printf " -4\tuser-local\n"
	printf " -5\tetc\n"
	printf " -6\tvnstat\n"
}

mode="${0##*/backup-}"
while getopts "123456hvxz" OPT;do
	case "$OPT" in
		1) mode="chromium";;
		2) mode="user-bin";;
		3) mode="user-config";;
		4) mode="user-local";;
		5) mode="etc";;
		6) mode="vnstat";;
		v) V="v";;
		x) comp="xz";;
		z) comp="zstd";;
		h) hlp;exit;;
	esac
done

case "${comp}" in
	zstd) C="zstd";A="-T0";E="zst";;
	xz) C="xz";A="-e9";E="xz";;
esac

case "${mode}" in
	chromium)
		target_source="${HOME}/.config/chrome"
		target_dest="${backup_dir}/${user}/chromium-profiles/${date}"
		dir_check
		cd "${target_source}"
		for f in *chrom*;do
			target_zst="${date}-${user}-${f}.tar.${E}"
			tar \
				--exclude="${f}/Default/File System" \
				--xattrs --sparse -${V}cf - "${f}" -P | "$C" "$A" >| "${tmpdir}/${target_zst}"
			move_finish
		done
		;;
	user-config)
		target_zst="${user}-config-${date}.tar.${E}"
		target_source="${HOME}/.config"
		target_dest="${backup_dir}/${user}/config"
		dir_check
		tar \
			--exclude="${target_source}/*chrom*" \
			--exclude="${target_source}/rtorrent/session/*" \
			--exclude="${target_source}/transmission/resume/*" \
			--exclude="${target_source}/transmission/torrents/*" \
			--exclude="${target_source}/kernel/src/*" \
			--exclude="${target_source}/kernel/distfiles/*" \
			--xattrs --sparse -${V}cf - "${target_source}" -P | "$C" "$A" >| "${tmpdir}/${target_zst}"
		;;
	user-local)
		target_zst="${user}-local-${date}.tar.${E}"
		target_source="${HOME}/.local"
		target_dest="${backup_dir}/${user}/local"
		dir_check
		tar \
			--exclude="${target_source}/share/Trash/*" \
			--xattrs --sparse -${V}cf - "${target_source}" -P | "$C" "$A" >| "${tmpdir}/${target_zst}"
		move_finish
		;;
	etc)
		target_zst="etc-${date}.tar.${E}"
		target_source="/etc"
		target_dest="${backup_dir}/etc"
		dir_check
		tar \
			--xattrs --sparse -${V}cf - "${target_source}" -P | "$C" "$A" >| "${tmpdir}/${target_zst}"
		move_finish
		;;
	user-bin)
		target_zst="${date}-${user}-bin.tar.${E}"
		target_source="${HOME}/.bin"
		target_dest="${backup_dir}/${user}/bin"
		dir_check
		mkdir "${tmpdir}"/bin
		cp -r "${target_source}" "${tmpdir}/bin"
		cd "${tmpdir}"
		tar \
			--xattrs --sparse -${V}cf - "${target_source}" -P | "$C" "$A" >| "${tmpdir}/${target_zst}"
		rm -rf "${tmpdir}/bin"
		move_finish
		;;
	vnstat)
		year=$(date "+%Y")
		month=$(date "+%m")
		day=$(date "+%d")
		target_source="${HOME}/.config/vnstat/vnstat.db"
		target_dest="${backup_dir}/vnstat-database"
		mkdir -p "${target_dest}/${year}/${month}/${day}"
		cp "${target_source}" "${target_dest}/${year}/${month}/${day}"
		;;
	meta) hlp;exit;;
esac
