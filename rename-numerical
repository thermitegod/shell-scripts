#improve hash check
#debug flags
#make less shit

#num=$(ls -1A|wc -l)
#int=$(seq -w -s ' ' ${num})
#array="${int}"
#files=$(ls -1A|sort -V)

array="$(seq -w -s ' ' $(ls -1A|wc -l))"
mode="single"
. $(dirname "$0")/colors.sh
while getopts "Bh" OPT;do
	case "$OPT" in
		b) mode="batch";;
		h)
			printf " -b\tBatch mode\n"
			printf " -h\tPrint this help\n"
			exit;;
	esac
done

case "${mode}" in
	single)
		#for f in $files;do
		for f in $(ls -1A|sort -V);do
			if [ -f "${f%%}" ];then
				array1=$(echo "$array"|cut -d ' ' -f 1)
				newname="${array1}.${f##*.}"
				if ! [ -f "${newname}" ];then
					mv -- "${f%%}" "${newname}"
				else
					if [ "$(openssl sha1 ${f%%})" = "$(openssl sha1 ${newname})" ];then
						printf "${YEL}Same File not renaming${NC}: ${f%%}\n"
					else
						printf "${YEL}Diferent files with same filename would exist${NC}\n"
						printf "${f%%}\n"
						printf "${newname}\n"
					fi
				fi
				array=$(echo "$array"|sed "s/[^ ]* //")
			fi
		done
		;;
	batch) find . -maxdepth 1 -type d \( ! -name . \) -exec cd -- '{}' && "${0}" \;;;
esac
