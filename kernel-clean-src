if [ $(id -u) -ne 0 ]; then printf "Requires root, exiting.\n";return;fi
finish(){ if [ -d "${tmpdir}" ];then rm --preserve-root -r "${tmpdir}";fi }
trap 'exit 1' INT HUP QUIT TERM USR1
trap finish EXIT
tmpdir=$(mktemp -d)

hlp() {
	printf " -c\tclean only /usr/src/linux symlink\n"
	printf " -C\tclean /usr/src/linux*\n"
	printf " -h\tprint this help\n"
	printf " -r\tremove all dirs in /usr/src\n"
}

mode="clean"
while true;do
	case "${1}" in
		-r) mode="remove";shift;;
		-c) mode="clean";shift;;
		-C) mode="cleanall";shift;;
		-h) hlp;return;;
		--) break;;
		*) break;;
	esac
done

case "${mode}" in
	clean)
		kdir="/usr/src/linux"
		mv "${kdir}"/.config "${tmpdir}"
		cd "${kdir}"
		make distclean
		mv "${tmpdir}"/.config "${kdir}"
		;;
	cleanall)
		ksrc="/usr/src"
		for f in $ksrc/*;do
			if [ -d "${f}" ];then
				cd "${f}"
				make distclean
			fi
		done

		;;
	remove)
		ksrc="/usr/src"
		for f in $ksrc/*;do
			rm -rf "${f}"
		done
		;;
esac
