zzz="1"
tst="0"
frm="0"
fls="0"

hlp() {
	printf " -h\tprint this help\n"
	printf " -l\tList found\n"
	printf " -r\tRemove found\n"
	printf " -t\tUse test dir '/tmp/test'\n"
	printf " -z\tDisable 'zzz' matching\n"
}

if [ -z "${1}" ];then hlp;exit;fi
while getopts "rltzh" OPT;do
	case "$OPT" in
		r) frm="1";;
		l) fls="1";;
		t) tst="1";;
		z) zzz="0";;
		h) hlp;exit;;
	esac
done

if [ ${tst} = "0" ];then
	d="/mnt/data/hentai-processing/credits"
else
	d="/tmp/test/credits"
fi

find_credits(){
	if [ "${fls}" = "1" ];then
		j=$(find . -iname "${1}" -exec ls -1A -- "{}" \;)
		if ! [ -z "${j}" ];then printf "*** Found 'POSSIBLE' credit files ***\n${j}\n";fi
	fi
	if [ "${frm}" = "1" ];then
		find . -type f -iname "${1}" -exec mv -v -- "{}" "${d}" \;
	fi
}

find_credits *credit*.j*pg
find_credits *credit*.png
if [ ${zzz} = "1" ] || [ "${fls}" = "1" ];then
	find_credits *zzz*.j*pg
	find_credits *zzz*.png
fi
