if [ "$(id -u)" -ne 0 ];then printf "Requires root, exiting.\n";exit;fi

for f in /dev/disk/by-id/ata-*; do
	if ! [ "$(echo ${f}|grep part)" ];then
		temp=$(smartctl -a ${f}|grep Celsius|awk '{print $10}')
		printf "%s\t\t%sÂ°c\n" "${f}" "${temp}"
	fi
done
