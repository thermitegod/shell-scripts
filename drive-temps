if [ "$(id -u)" -ne 0 ];then printf "Requires root\n";exit;fi

for f in /dev/disk/by-id/ata-*;do
	if ! [ "$(echo ${f}|grep part)" ];then
		len=$(echo ${f##*/}|wc -m)
		temp=$(smartctl -a ${f}|grep Celsius|awk '{print $10}')
		case "${len}" in
			3[2-9]|40) tab="\t\t\t";;
			4[0-8]) tab="\t\t";;
			[1-3][0-1]) printf "below lower format\nlen: ${len}\ndevice: ${f}";;
			[4-9][7-9]) printf "above upper format\nlen: ${len}\ndevice: ${f}";;
		esac
		printf "${f}${tab}${temp}Â°c\n"
	fi
done
